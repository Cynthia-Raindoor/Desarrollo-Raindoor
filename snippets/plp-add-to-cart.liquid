<script src="{{ 'custom-swatch-plp.js' | asset_url }}"></script>

<div class="plp-swatches-wrapper">
  <p>Disponible en:</p>
  <div class="plp-swatches">
    {% if card_product.variants.size == 1 %}
      <button
        type="button"
        class="plp-swatch"
        data-variant-id="{{ card_product.selected_or_first_available_variant.id }}"
        onclick="updateSelectedVariant(this)"
      >
        Talla Ãšnica
      </button>
    {% else %}
      {% for variant in card_product.variants %}
        <button
          type="button"
          class="plp-swatch{% unless variant.available %} disabled{% endunless %}"
          data-variant-id="{{ variant.id }}"
          onclick="updateSelectedVariant(this)"
          {% unless variant.available %}disabled{% endunless %}
        >
          {{ variant.option1 }}
        </button>
      {% endfor %}
    {% endif %}
  </div>
</div>

