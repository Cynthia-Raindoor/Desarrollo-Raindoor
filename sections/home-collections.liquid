<div class="page-width">
  {% if section.settings.carrusel != false %}
    <div class="swiper home-carrusel-{{section.id}}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <a href="{{ block.settings.link }}">
              <img
                src="{{ block.settings.image | image_url: width: 800 }}"
                alt="{{ block.settings.heading }}"
                loading="lazy"
                width=""
                height=""
              >
              <div class="card-home-collection">
                <h3>{{ block.settings.heading }}</h3>
                {% if block.settings.button_label != blank %}
                  <button>
                    <span class="btn">{{ block.settings.button_label }}</span>
                  </button>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      <!-- Botones opcionales -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>

      {% if section.settings.dots != false %}
        <div class="swiper-pagination"></div>
      {% endif %}
    </div>

  {% else %}
    <ul class="home-collection-{{ section.id }} items-{{ section.blocks.size }}">
      {% for block in section.blocks %}
        <li>
          <a href="{{ block.settings.link }}">
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.heading }}"
              loading="lazy"
              width=""
              height=""
            >
            <div class="card-home-collection">
              <h3>{{ block.settings.heading }}</h3>

              {% if block.settings.button_label != blank %}
                <button>
                  <span class="btn">{{ block.settings.button_label }}</span>
                </button>
              {% endif %}
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>

{% style %}
    @media screen and (max-width:768px){
        .home-collection-{{ section.id }} {
            grid-template-columns: repeat(1, 1fr)!important;
        }
    }
    .home-carrusel-{{section.id}} .swiper-slide a {
    display:flex;
    }
    .home-carrusel-{{section.id}} .swiper-pagination {
        position:relative;
        top:0;
    }
      .home-carrusel-{{section.id}} img {
          width: 100%;
          display:block;
      }
        .home-collection-{{ section.id }},
        .home-carrusel-{{section.id}} {
            margin-top: {{ section.settings.margin-top }}px;
            margin-bottom:{{ section.settings.margin-bottom }}px;
        }
          .home-collection-{{ section.id }} button,
          .home-carrusel-{{section.id}} button {
               background: #eae9e4;
              color: black;
              border: 0px;
              text-transform: uppercase;
              padding: 1rem 2rem;
              letter-spacing: 4px;
              font-size: 1rem;
              font-weight: 700;

            }

              .home-collection-{{ section.id }} {
                  display: grid;
                  gap: 2rem;
                  list-style: none;
                  padding: 0;
              }

              .home-collection-{{ section.id }} li a {
                  display: flex;
                  text-align: center;
                  text-decoration: none;
                  position:relative;
              }

              .home-collection-{{ section.id }} li img {
                  width: 100%;
                  height: auto;
              }

              /* comportamiento dinámico */
              .home-collection-{{ section.id }}.items-1 {
                  grid-template-columns: 1fr;
              }

              .home-collection-{{ section.id }}.items-2 {
                  grid-template-columns: repeat(2, 1fr);
              }

              .home-collection-{{ section.id }}.items-3 {
                  grid-template-columns: repeat(3, 1fr);
              }
          .home-collection-{{ section.id }}.items-4 {
                  grid-template-columns: repeat(4, 1fr);
              }


             .home-collection-{{ section.id }} .card-home-collection,
             .home-carrusel-{{section.id}} .card-home-collection{
                position:absolute;
              bottom: 0;
              left: 0;
              margin: 0;
              width: calc(100% - 2rem);
              text-align: left;
              padding: 1rem;
              }
                 .home-collection-{{ section.id }} .card-home-collection h3,
                 .home-carrusel-{{section.id}} .card-home-collection h3 {
                  color:white;
                  margin: 0 0 1rem 0;
                 }

                 .home-carrusel-{{ section.id }} {
    width: 100%;
  }

  .home-carrusel-{{ section.id }} .swiper {
    width: 100%;
  }

  .home-carrusel-{{ section.id }} .swiper-wrapper {
    display: flex;
  }
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carruseles = document.querySelectorAll('.home-carrusel-{{section.id}}');
    if (!carruseles.length) return;

    carruseles.forEach((el) => {
      new Swiper(el, {
        slidesPerView: 1,
        spaceBetween: 16,
        loop: true,
        speed: 600,

        autoplay: {
          delay: 5000,
          disableOnInteraction: false,
        },
        navigation: {
          nextEl: el.querySelector('.swiper-button-next'),
          prevEl: el.querySelector('.swiper-button-prev'),
        },
        pagination: {
          el: el.querySelector('.swiper-pagination'),
          clickable: true,
        },
        breakpoints: {
          768: { slidesPerView: 2 },
          1024: { slidesPerView: 3 },
        },
      });
    });
  });
</script>
{% schema %}
{
  "name": "Home collection",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "margin-top",
      "min": 0,
      "max": 300,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "Margen superior"
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "min": 0,
      "max": 300,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "Margen inferior"
    },

    {
      "type": "checkbox",
      "id": "carrusel",
      "default": false,
      "label": "¿Activar carrusel?",
      "info": "Mínimo 4 slides"
    },
    {
      "type": "checkbox",
      "id": "dots",
      "default": false,
      "label": "¿Activar dots?"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "slides",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Texto"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Texto botón"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home collection",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
