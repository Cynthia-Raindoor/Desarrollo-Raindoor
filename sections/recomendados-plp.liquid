{%- style -%}
      .custom_carrusel-{{ section.id }} .slider--desktop:after {
          display:none;
      }

      /* ESTILOS DOTS (Solo Mobile) */
      .slider-mobile-dots {
          display: flex;
          justify-content: center;
          align-items: center;
          margin-top: 1rem;
          gap: 8px;
      }
      .slider-mobile-dots .dot {
          width: 10px;
          height: 10px;
          border-radius: 50%;
          background-color: rgba(var(--color-foreground), 0.2);
          border: none;
          padding: 0;
          cursor: pointer;
          transition: background-color 0.3s;
      }
      .slider-mobile-dots .dot.active {
          background-color: rgb(var(--color-foreground));
          transform: scale(1.1);
      }

      /* ESTILOS MOBILE: 2 items y un cachito */
      @media screen and (max-width: 749px) {


        .custom_carrusel-{{ section.id }} slider-component .plp-swatches-wrapper {
    opacity: 1 !important;
    visibility: visible;
}


       .slider-buttons.no-js-hidden {
        display: none;
    }
          .custom_carrusel-{{ section.id }} .slider__slide {
                    width: calc(100% / 1.5) !important;
        max-width: calc(100% / 1.5) !important;
          }

          /* Asegurar que el slider permita scroll suave */
          .custom_carrusel-{{ section.id }} slider-component ul.slider {
              scroll-padding-left: 1.5rem; /* Un poco de aire a la izquierda */
          }
      }

      /* ESTILOS DESKTOP */
      @media screen and (min-width: 750px) {
          .custom_carrusel-{{ section.id }} slider-component.slider-mobile-gutter ul li {
      width: calc(100% / 4.5) !important;
  }
          /* Ocultar dots en desktop */
          .slider-mobile-dots {
              display: none;
          }

          .custom_carrusel-{{ section.id }} button.slider-button.slider-button--next,
          .custom_carrusel-{{ section.id }} button.slider-button.slider-button--prev {
              position: absolute;
              top: 50%;
              transform: translateY(-50%);
          }
          .custom_carrusel-{{ section.id }} slider-component {
              padding: 0 50px!important;
          }
          .custom_carrusel-{{ section.id }} button.slider-button.slider-button--next {
              right: 0;
          }
          .custom_carrusel-{{ section.id }} button.slider-button.slider-button--prev {
              left: 0;
          }
      }

      .slider--desktop .slider__slide:first-child {
          margin:0!important;
      }
      .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
          padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      }

      @media screen and (min-width: 750px) {
          .section-{{ section.id }}-padding {
              padding-top: {{ section.settings.padding_top }}px;
              padding-bottom: {{ section.settings.padding_bottom }}px;
          }
      }

      .slider-buttons {
          margin-top: 1rem;
          justify-content: center;
      }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient custom_carrusel-{{ section.id }}">
  <div class="related-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {% if section.settings.heading != blank %}
      <h2 class="related-products__heading text-center inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% assign selected_collection = collections[section.settings.related_collection] %}

    {% if selected_collection == empty %}
      <p class="text-center">Selecciona una colección en los ajustes de la sección.</p>
    {% elsif selected_collection.products.size == 0 %}
      <p class="text-center">La colección seleccionada no tiene productos.</p>
    {% else %}
      <!-- Inicio Estructura Carrusel Nativo Dawn -->
      <slider-component class="slider-mobile-gutter">
        <ul
          id="Slider-{{ section.id }}"
          class="grid product-grid grid--2-col grid--4-col-desktop slider slider--desktop slider--tablet"
          role="list"
          aria-label="Slider"
        >
          {% assign skip_card_product_styles = false %}
          {%- for product in selected_collection.products limit: section.settings.products_to_show -%}
            <li
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="grid__item slider__slide"
            >
              {% render 'card-product',
                card_product: product,
                media_aspect_ratio: section.settings.image_ratio,
                image_shape: section.settings.image_shape,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating,
                skip_styles: skip_card_product_styles,
                section_id: section.id
              %}
            </li>
            {%- assign skip_card_product_styles = true -%}
          {%- endfor -%}
        </ul>

        <!-- Botones de navegación del Slider (Flechas) -->
        <div class="slider-buttons no-js-hidden">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>

        <!-- DOTS PARA MOBILE -->
        <div class="slider-mobile-dots no-js-hidden">
          {%- for product in selected_collection.products limit: section.settings.products_to_show -%}
            <button
              class="dot {% if forloop.first %}active{% endif %}"
              data-index="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {%- endfor -%}
        </div>
      </slider-component>
      <!-- Fin Estructura Carrusel -->

      <!-- Script simple para controlar los dots -->
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          const sectionId = '{{ section.id }}';
          const slider = document.getElementById('Slider-' + sectionId);
          const dots = document.querySelectorAll('.custom_carrusel-' + sectionId + ' .dot');

          if (!slider || !dots.length) return;

          // 1. Función al hacer click en un dot
          dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
              const slide = slider.querySelector('.slider__slide:nth-child(' + (index + 1) + ')');
              if (slide) {
                slider.scrollTo({
                  left: slide.offsetLeft,
                  behavior: 'smooth',
                });
              }
            });
          });

          // 2. Función para actualizar el dot activo al hacer scroll
          slider.addEventListener(
            'scroll',
            () => {
              // Calculamos qué slide está más visible
              const scrollLeft = slider.scrollLeft;
              const slideWidth = slider.querySelector('.slider__slide').offsetWidth;
              // Sumamos la mitad del ancho para redondear al índice correcto
              const activeIndex = Math.round(scrollLeft / slideWidth);

              dots.forEach((dot, index) => {
                if (index === activeIndex) {
                  dot.classList.add('active');
                } else {
                  dot.classList.remove('active');
                }
              });
            },
            { passive: true }
          );
        });
      </script>
    {% endif %}
  </div>

  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>
