<div class="swiper slide-home-{{ section.id }} {% if section.settings.top_margin == true %}margin-top-main{% endif %}">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <a href="{{ block.settings.link }}" {% if block.settings.link == blank %}style="pointer-events: none;"{% endif %}>
          
          {% comment %} --- DESKTOP: Video o Imagen --- {% endcomment %}
          {% if block.settings.video_desktop != blank %}
            {{ block.settings.video_desktop | video_tag: autoplay: true, loop: true, muted: true, controls: false, playsinline: true, class: 'only_desktop', image_size: 'master' }}
          {% elsif block.settings.image != blank %}
            <img 
              class="only_desktop" 
              src="{{ block.settings.image | image_url: width: 2400 }}" 
              srcset="{{ block.settings.image | image_url: width: 1920 }} 1920w,
                      {{ block.settings.image | image_url: width: 2400 }} 2400w,
                      {{ block.settings.image | image_url: width: 3000 }} 3000w"
              sizes="100vw"
              width="2400" 
              height="{{ 2400 | divided_by: block.settings.image.aspect_ratio | ceil }}" 
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
              alt="{{ block.settings.image.alt | escape }}">
          {% endif %}

          {% comment %} --- MOBILE: Video o Imagen --- {% endcomment %}
          {% if block.settings.video_mobile != blank %}
            {{ block.settings.video_mobile | video_tag: autoplay: true, loop: true, muted: true, controls: false, playsinline: true, class: 'only_mobile', image_size: 'master' }}
          {% elsif block.settings.image_mobile != blank %}
            <img 
              class="only_mobile" 
              src="{{ block.settings.image_mobile | image_url: width: 1200 }}" 
              srcset="{{ block.settings.image_mobile | image_url: width: 768 }} 768w,
                      {{ block.settings.image_mobile | image_url: width: 1200 }} 1200w,
                      {{ block.settings.image_mobile | image_url: width: 1536 }} 1536w"
              sizes="100vw"
              width="1200" 
              height="{{ 1200 | divided_by: block.settings.image_mobile.aspect_ratio | ceil }}" 
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
              alt="{{ block.settings.image_mobile.alt | escape }}">
          {% endif %}

        </a>
      </div>
    {% endfor %}
  </div>

  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
  <div class="swiper-pagination"></div>
</div>

<style>
    .slide-home-{{ section.id }} img,
    .slide-home-{{ section.id }} video {
        width: 100%;
        height: auto;
        display: block;
        object-fit: cover;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
    }

    .slide-home-{{ section.id }}.margin-top-main {
        margin-top: -95px;
    }

    .slide-home-{{ section.id }} .only_mobile {
        display: none !important;
    }

    .slide-home-{{ section.id }} .swiper-slide {
        background-color: #f5f5f5;
    }

    @media screen and (max-width: 768px) {
        .slide-home-{{ section.id }} .only_desktop {
            display: none !important;
        }
        .slide-home-{{ section.id }} .only_mobile {
            display: block !important;
        }
    }

    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .slide-home-{{ section.id }} img {
            image-rendering: auto;
        }
    }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carruseles = document.querySelectorAll('.slide-home-{{ section.id }}');
    if (!carruseles.length) return;

    carruseles.forEach((el) => {
      new Swiper(el, {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: true,
        speed: 600,

        navigation: {
          nextEl: el.querySelector('.swiper-button-next'),
          prevEl: el.querySelector('.swiper-button-prev'),
        },
        pagination: {
          el: el.querySelector('.swiper-pagination'),
          clickable: true,
        },
        on: {
          init: function() {
            const firstSlide = this.slides[0];
            const video = firstSlide.querySelector('video');
            if (video) {
              video.load();
            }
          }
        }
      });
    });
  });
</script>

